<div class="department-form">
  <div class="title">新規予定表</div>
  <%=form_with model: @department, local: true do |f|%>
    <div class="department-format">
      <div class="form-group side">
        <%= f.label :名前,for: "formGroupExampleInput", class: 'department-form-label'%>
        <%= f.text_field :name, class: 'department-form-input form-control', id:"formGroupExampleInput", placeholder: '予定表の名前を入力してください', autocomplete: "off" %>
      </div>
      <%= f.submit class: 'department-form_action-btn btn btn-primary', value: "登録"%>
    </div>
  <% end %>
</div>