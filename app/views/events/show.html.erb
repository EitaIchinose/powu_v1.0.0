<div class="event-form">
  <div class="plan-name font-weight-bold">詳細</div>
  <table class="table show-table">
    <thead class="thead-light">
      <tr>
        <th></th>
        <th class="font-weight-bold heading">予定者</th>
        <th><%=link_to @event.user.nickname , user_path(@event.user.id), class:"show-user-nickname" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"></th>
        <td class="font-weight-bold heading">Title</td>
        <td><%= @event.title %></td>
      </tr>
      <tr>
        <th scope="row"></th>
        <td class="font-weight-bold heading">開始時間</td>
        <td><%= @event.start_time.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      </tr>
      <tr>
        <th scope="row" id="display-bottom"></th>
        <td class="font-weight-bold heading">終了時間</td>
        <td id="display-bottom"><%= @event.end_time.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      </tr>
    </tbody>
  </table>
  <div class="content-area">
    <div class="content-name font-weight-bold">内容</div>
      <%= safe_join(@event.content.split("\n"),tag(:br)) %>
    </div>
  <div class="transition">
    <%= link_to '編集画面へ', edit_department_event_path(@department,@event), class: 'btn btn-primary' %>
    <%= link_to '予定を削除', department_event_path(@department,@event),method: :delete, class: 'btn btn-danger' %>
  </div>
  <div class="back">
    <%= link_to '←戻る', department_events_path , class: 'btn btn-secondary' %>
  </div>
</div>